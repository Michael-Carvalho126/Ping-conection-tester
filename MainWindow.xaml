<Window x:Class="ISP_Ping_tester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISP_Ping_tester"
        mc:Ignorable="d"
        Title="ISP ping test program"
        Height="480" Width="780"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True">
    <Border Background="Aqua"
            CornerRadius="20"
            MouseLeftButtonDown="Grid_MouseLeftButtonDown">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>
            <!--Row 1-->
            <TextBlock Text="Ping test program"
                       Grid.Column="1"
                       Grid.Row="1"
                       Grid.ColumnSpan="2"
                       HorizontalAlignment="Center"
                       Panel.ZIndex="1"
                       FontSize="32"
                       FontWeight="Bold"/>

            <Grid Grid.Row="1"
                  Grid.Column="1"
                  Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="close"
                            Grid.Column="3"
                            MinHeight="20"
                            MinWidth="20"
                            Margin="5"
                            HorizontalAlignment="Right"
                            Content=" Close "
                            FontSize="25"
                            FontWeight="Bold" Click="close_Click"/>
            </Grid>

            <!--Row 2-->
            <Button x:Name="startAuto"
                    Grid.Column="1"
                    Grid.Row="2"
                    Margin="10"
                    MinHeight="50"
                    Content="Start automatic test"
                    FontSize="20"
                    FontWeight="bold"
                    Background="LightGreen"
                    Click="startAuto_Click"/>
            <Button x:Name="stopAuto"
                    Grid.Column="2"
                    Grid.Row="2"
                    Margin="10"
                    MinHeight="50"
                    Content="Stop automatic test"
                    FontSize="20"
                    FontWeight="bold"
                    Background="Red"
                    Click="stopAuto_Click"/>

            <!--Row 3-->
            <Button x:Name="startManualTest"
                    Grid.Column="1"
                    Grid.Row="3"
                    Margin="10"
                    MinHeight="50"
                    Content="Start manual test"
                    FontSize="20"
                    FontWeight="bold"
                    Background="Green"
                    Click="StartManualTest_Click"/>
            <StackPanel Orientation="Horizontal"
                        Grid.Column="2"
                        Grid.Row="3"
                        Margin="10">
                <TextBlock Text="Repeat:"
                           VerticalAlignment="Center"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin= "0,5,10,5"/>
                <TextBox x:Name="manualPingRepeat"
                         MinHeight="20"
                         MaxHeight="30"
                         MinWidth="40"
                         FontSize="18"
                         Text="1"
                         Foreground="Black"
                         Background="Aqua"/>
                <TextBlock Text="Add:"
                           VerticalAlignment="Center"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin= "5,5,10,5"/>
                <TextBox x:Name="manualPingAddress"
                         MinHeight="20"
                         MaxHeight="30"
                         MinWidth="160"
                         FontSize="18"
                         Text="www.google.co.uk"
                         Foreground="Black"
                         Background="Aqua"
                         HorizontalScrollBarVisibility="Auto"/>
            </StackPanel>

            <!--Row 4-->
            <TextBlock Grid.Column="1"
                       Grid.Row="4"
                       Margin="10"
                       Text="Current state of the program:"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"/>
            <TextBox x:Name="currentStateOfProgramTextBox"
                     Grid.Column="2"
                     Grid.Row="4"
                     Margin="5"
                     MinHeight="30"
                     MinWidth="200"
                     Background="Gray"/>

            <!--Row 5-->
            <TextBlock Grid.Column="1"
                       Grid.Row="5"
                       Margin="10"
                       Text="Current state of the connection:"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"/>
            <TextBox x:Name="currentStateOfConnectionTextBox"
                     Grid.Column="2"
                     Grid.Row="5"
                     Margin="5"
                     MinHeight="30"
                     MinWidth="200"
                     Background="Gray"/>

            <!--Row 6-->
            <TextBlock Grid.Column="1"
                       Grid.Row="6"
                       Margin="10"
                       Text="Minimum packet size:"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"/>
            <TextBox x:Name="minimumPacketSizeTextBox"
                     Grid.Column="2"
                     Grid.Row="6"
                     HorizontalAlignment="Left"
                     Margin="5"
                     MinHeight="30"
                     MaxHeight="30"
                     MinWidth="20"
                     MaxWidth="45"
                     Text="32"
                     FontSize="20"
                     FontWeight="bold"
                     Foreground="Black"
                     Background="Aqua"/>

            <!--Row 7-->
            <TextBlock Grid.Column="1"
                       Grid.Row="7"
                       Margin="10"
                       Text="Maximum packet size:"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"/>
            <TextBox x:Name="maximumPacketSizeTextBox"
                     Grid.Column="2"
                     Grid.Row="7"
                     HorizontalAlignment="Left"
                     Margin="5"
                     MinHeight="30"
                     MaxHeight="30"
                     MinWidth="20"
                     MaxWidth="45"
                     Text="64"
                     FontSize="20"
                     FontWeight="bold"
                     Foreground="Black"
                     Background="Aqua"/>

            <!--Row 8-->
            <TextBlock Grid.Column="1"
                       Grid.Row="8"
                       Margin="10"
                       Text="Info:"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       FontSize="24"
                       FontWeight="Bold"/>
            <TextBox x:Name="infoTextBox"
                     Grid.Column="2"
                     Grid.Row="8"
                     HorizontalAlignment="Left"
                     Margin="5"
                     MinHeight="30"
                     MinWidth="350"
                     FontSize="20"
                     FontWeight="bold"
                     Foreground="Black"
                     Background="Aqua"
                     HorizontalScrollBarVisibility="Auto"
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"/>
        </Grid>

    </Border>
</Window>
